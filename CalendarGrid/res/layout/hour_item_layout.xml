<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent" android:layout_height="60dp"
    android:background="@drawable/separator" android:padding="1dp">
    <TextView
        android:id="@+id/h_label"
        android:layout_width="40dp" android:layout_height="60dp"
        android:padding="5dp"
        android:textSize="14sp" android:text="18"
        android:textColor="@android:color/black"
        android:gravity="top|left" android:background="#999999"/>
    <View
        android:id="@+id/separator"
        android:layout_width="1dp" android:layout_height="60dp"
        android:layout_toRightOf="@+id/h_label"
        android:background="@color/calendar_darker_gray"/>
    <TextView
        android:id="@+id/item_name"
        android:layout_width="match_parent" android:layout_height="60dp"
        android:paddingTop="5dp" android:paddingLeft="5dp"
        android:layout_toRightOf="@+id/separator"
        android:text="Event name" android:textColor="@android:color/black"
        android:background="#cecece"/>
</RelativeLayout>