<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <kpk.dev.CalendarGrid.widget.views.ExpandableGridView
        android:id="@+id/calendar_gridview"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:gravity="center_horizontal"
        android:numColumns="7"
        android:listSelector="@color/caldroid_transparent"
        android:padding="1dp" android:stretchMode="columnWidth"
        android:verticalSpacing="1dp" android:horizontalSpacing="1dp"
        android:background="@color/caldroid_lighter_gray"/>
</FrameLayout>

